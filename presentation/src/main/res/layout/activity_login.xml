<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.kuroutine.kulture.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <ImageView
            android:id="@+id/iv_login_chattingicon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/chatting_icon"
            app:layout_constraintEnd_toEndOf="@+id/iv_login_applogo"
            app:layout_constraintStart_toStartOf="@+id/iv_login_applogo"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_applogo" />

        <ImageView
            android:id="@+id/iv_login_applogo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/iv_login_chattingicon"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/kulture_logo" />


        <LinearLayout
            android:id="@+id/btn_login_facebook"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_login_applogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/facebook_background_round"
            android:onClick="facebookLogin"
            android:padding="10dp"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="@+id/iv_login_chattingicon"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_login_chattingicon"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_chattingicon"
            app:srcCompat="@drawable/logo_facebook">

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_facebook" />

            <TextView
                android:id="@+id/tv_facebook"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Facebook으로 로그인"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_login_google"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/iv_login_applogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/google_background_round"
            android:onClick="googleLogin"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="@+id/btn_login_facebook"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btn_login_facebook"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_facebook"
            app:srcCompat="@drawable/logo_facebook">

            <ImageView
                android:id="@+id/iv_google"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/google" />

            <TextView
                android:id="@+id/tv_google"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Google로 로그인"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>





























