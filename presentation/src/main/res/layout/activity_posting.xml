<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_posting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/green" />

    <Button
        android:id="@+id/btn_posting_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/ams"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:text="완료"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_posting_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toEndOf="@+id/tv_posting_name"
        app:layout_constraintTop_toTopOf="@+id/tv_posting_name" />

    <TextView
        android:id="@+id/tv_posting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="질문 작성"
        android:textColor="@color/green"
        android:textSize="36sp"
        android:fontFamily="@font/angel"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_posting_back"
        app:layout_constraintStart_toEndOf="@+id/iv_posting_back"
        app:layout_constraintTop_toTopOf="@+id/iv_posting_back"
        app:layout_constraintVertical_bias="0.875" />


    <ImageButton
        android:id="@+id/imgbtn_activity_posting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:paddingBottom="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_posting_back"
        app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
        app:tint="@color/orange" />

    <EditText
        android:id="@+id/et_posting_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="제목"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_activity_posting"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/et_posting_details"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="상세내용"
        android:inputType="text|textMultiLine"
        android:lines="20"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/et_posting_title"
        tools:layout_editor_absoluteX="31dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_pst"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@+id/imgbtn_activity_posting"
        app:layout_constraintEnd_toEndOf="@+id/et_posting_title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_activity_posting"
        app:layout_constraintTop_toTopOf="@+id/imgbtn_activity_posting"
        app:layout_constraintVertical_bias="0.66"
        tools:listitem="@layout/multi_img_item" />

</androidx.constraintlayout.widget.ConstraintLayout>