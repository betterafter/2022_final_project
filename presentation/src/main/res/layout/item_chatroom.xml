<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_chatroom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">


            <ImageView
                android:id="@+id/iv_item_chatroom_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/main_color"
                android:padding="10dp"
                app:tint="@color/white"
                android:src="@drawable/ic_profile_fill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:paddingRight="10dp"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:weightSum="10"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_item_chatroom_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        tools:text="신기열" />

                    <TextView
                        android:id="@+id/tv_item_chatroom_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="10sp"
                        tools:text="오후 2:31"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_chatroom_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="안녕하세요!" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>